@model ServiceAdd

<h2>Dodaj czynność serwisową</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="fuelQquantity">Rodzaj czynności</label>
        <select asp-for="idType" class="form-control">
            <option value="3">Inna czynność</option>
            <option value="4">Wymiana rozżadu</option>
            <option value="5">Wymiana oleju</option>
        </select>
        <span asp-validation-for="idType"></span>
    </div>

    <div class="form-group">
        <label for="description">Opis</label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description"></span>
    </div>

    <div class="form-group">
        <label for="date">Data</label>
        <input asp-for="date" class="form-control" />
        <span asp-validation-for="date"></span>
    </div>

    <div class="form-group">
        <label for="milage">Przebieg</label>
        <input asp-for="milage" class="form-control" />
        <span asp-validation-for="milage"></span>
    </div>

    <div class="form-group">
        <label for="price">Cena</label>
        <input asp-for="price" class="form-control" />
        <span asp-validation-for="price"></span>
    </div>

    <button class="btn btn-primary" type="submit">Dodaj</button>
    <button class="btn btn-primary" type="reset">Wyczyść</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
