@model RefuelingAdd

<h2>Dodaj Tankowanie</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="fuelQquantity">Ilość paliwa [l]</label>
        <input asp-for="fuelQquantity" class="form-control" />
        <span asp-validation-for="fuelQquantity"></span>
    </div>

    <div class="form-group">
        <label for="price">Cena [zł]</label>
        <input asp-for="price" class="form-control" />
        <span asp-validation-for="price"></span>
    </div>

    <div class="form-group">
        <label for="date">Data</label>
        <input asp-for="date" class="form-control" />
        <span asp-validation-for="date"></span>
    </div>

    <div class="form-group">
        <label for="milage">Przebieg</label>
        <input asp-for="milage" class="form-control" />
        <span asp-validation-for="milage"></span>
    </div>

    <div class="btn-group btn-block" role="group" aria-label="Basic example">
        <button class="btn btn-success" type="submit">Dodaj</button>
        <button class="btn btn btn-secondary" type="reset">Wyczyść</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
