@model List<Cars>

<h1>Samochody</h1>

<form method="get">
    <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
        <div class="input-group mb-3">
            <input type="text" id="search" name="search" class="form-control" placeholder="Numer rejestracji" aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Szukaj</button>
            </div>
        </div>
        <div class="btn-group" role="group" aria-label="First group">
            <div>
                <a href="/cars/caradd" class="btn btn-primary">Dodaj samochód</a>
            </div>   
        </div>
    </div>
</form>

<table class="table">
    <thead class="thead-light">
    <tr>
        <th scope="col">Marka</th>
        <th scope="col">Model</th>
        <th scope="col">Numer rejestracji</th>
        <th scope="col"></th>
    </tr>
    @foreach (var st in Model)
    {
        <tr>
            <td>@st.Make</td>
            <td>@st.Model</td>
            <td>@st.LicensePlate</td>
            <td>
                <a href="/cars/details/@st.IdCar" class="btn btn-outline-primary">Pokaż szczgóły</a>
            </td>
        </tr>
    }
</table>